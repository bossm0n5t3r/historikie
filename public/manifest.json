{
  "manifest_version": 3,
  "name": "Historikie - History Search",
  "version": "1.1.0",
  "description": "Search your Chrome history with a beautiful popup interface",
  "permissions": [
    "history",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search History",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}